@using Social_Network.Core.Application.ViewModels.FriendshipRequest
@model FriendshipRequestMainVM
@{
    ViewData["Title"] = "Solicitudes de Amistad";
}

<div class="container mt-4">
    @if (!string.IsNullOrEmpty(ViewBag.Errors))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.Errors
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Solicitudes recibidas</h5>
                <span class="badge bg-light text-dark">@Model.RequestTo.Count()</span>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.RequestTo.Any())
            {
                <div class="alert alert-info text-center mb-0">No tienes solicitudes pendientes</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Usuario</th>
                                <th>Amigos en común</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.RequestTo)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <img src="~/images/user-placeholder.png" class="rounded-circle" width="40" height="40" alt="Foto de perfil">
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                @request.OtherUserName
                                            </div>
                                        </div>
                                    </td>
                                    <td>@request.FriendsInCommon</td>
                                    <td>@request.RequestDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-controller="FriendshipRequest" asp-action="ApproveRequest" asp-route-requestId="@request.FrienshipRequestId"
                                               class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Aceptar
                                            </a>
                                            <a asp-controller="FriendshipRequest" asp-action="RejectRequest" asp-route-requestId="@request.FrienshipRequestId"
                                               class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i> Rechazar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Solicitudes enviadas</h5>
                <div>
                    <a asp-controller="FriendshipRequest" asp-action="Save" class="btn btn-sm btn-light">
                        <i class="fas fa-plus"></i> Nueva solicitud
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.RequestFrom.Any())
            {
                <div class="alert alert-info text-center mb-0">No has enviado solicitudes</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Usuario</th>
                                <th>Amigos en común</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.RequestFrom)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <img src="~/images/user-placeholder.png" class="rounded-circle" width="40" height="40" alt="Foto de perfil">
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                @request.OtherUserName
                                            </div>
                                        </div>
                                    </td>
                                    <td>@request.FriendsInCommon</td>
                                    <td>@request.RequestDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @switch (request.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning text-dark">Pendiente</span>
                                                break;
                                            case "Accepted":
                                                <span class="badge bg-success">Aceptada</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">Rechazada</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@request.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (request.Status == "Pending")
                                        {
                                            <a asp-controller="FriendshipRequest" asp-action="DeleteRequest" asp-route-requestId="@request.FrienshipRequestId"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i> Cancelar
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>