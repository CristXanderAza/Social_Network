@using Social_Network.Core.Application.ViewModels.FriendshipRequest
@model FriendRequestWritteVM
@{
    ViewData["Title"] = "Nueva Solicitud de Amistad";
}

<div class="card">
    <div class="card-header bg-primary">
        <h1 class="text-center text-light">Selecciona tu nuevo amigo</h1>
    </div>
    <div class="card-body">
        <form asp-action="Save" method="post">
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Foto</th>
                            <th>Usuario</th>
                            <th>Amigos en comun</th>
                            <th>Selecciona</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var opcion in Model.Options)
                        {
                            <tr>
                                <td>
                                    <img src="~/@opcion.ProfilePhotoUrl" alt="Foto de perfil" class="img-fluid" style="max-height: 60px;" />
                                </td>
                                <td>
                                    <h5>@opcion.UserName</h5>
                                </td>
                                <td>
                                    <h5>@opcion.FriendsInCommon</h5>
                                </td>
                                <td>
                                    <input type="radio" asp-for="SelectedOption" value="@opcion.UserId" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Enviar Selección</button>
            </div>
        </form>
    </div>
</div>